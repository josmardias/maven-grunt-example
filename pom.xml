<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <name>Maven Grunt Example</name>
  <groupId>com.github.josmardias</groupId>
  <artifactId>maven-grunt-example</artifactId>
  <version>0.0.1-SNAPSHOT</version>

  <prerequisites>
    <maven>3.0.5</maven>
  </prerequisites>

  <build>

    <plugins>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-install-plugin</artifactId>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>

      <plugin>
        <groupId>com.googlecode.maven-download-plugin</groupId>
        <artifactId>download-maven-plugin</artifactId>
        <version>1.2.1</version>
        <executions>
          <execution>
            <id>install node</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>wget</goal>
            </goals>
            <configuration>
              <url>http://nodejs.org/dist/v${node.version}/node-v${node.version}-linux-x64.tar.gz</url>
              <unpack>true</unpack>
              <outputDirectory>${project.basedir}/node</outputDirectory>
              <sha1>${node.sha1}</sha1>
            </configuration>
          </execution>
        </executions>
      </plugin>

    </plugins>
  </build>

  <properties>
    <node.version>0.12.1</node.version>
    <node.sha1>79880ff2bc95a674bd0701a6dd4ed38f8366db27</node.sha1>
    <npm.version>2.7.3</npm.version>
    <!--node.downloadRoot>http://myproxy.example.org/nodejs/dist/</node.downloadRoot-->
  </properties>

</project>
